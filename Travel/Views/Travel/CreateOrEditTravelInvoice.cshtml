@model Travel.ViewModel.TravelVM

<link href="~/Calendar/jquery-ui-1.13.2/jquery-ui.min.css" />

<div>
    <div class="panel panel-primary dialog-panel">
        <div class="panel-heading" style="text-align:center;">
            <h3>Travel Insurance Policy</h3>
        </div>

        <div style="text-align:left">
            <p>
                <h4>Insured Information  </h4>
            </p>
            <hr>
        </div>

        <div class="panel-body">
            <form asp-action="CreateOrEditPolicy" asp-controller="Travel" method="post">
                <input asp-for="Id" name="Id" id="Id" hidden />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class=" col-md-12">
                    <div class="col-md-3">
                        <div class="form-group internal" style="text-align: left">
                            <select class="form-control select2" asp-for="BimeGozar.PersonJensId" id="PersonJensId">
                                @foreach (var item in Model.BimeGozar.PersonJensName)
                                {
                                    <option value="@item.PersonJensId">@item.PersonJensName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <label class="control-label col-md-1 " for="PersonJensId">:Gender</label>
                    <div class="col-md-3 indent-small">
                        <div class="form-group internal" style="text-align: left">
                            <input class="form-control" asp-for="BimeGozar.PersonLname" style="direction:ltr" id="PersonLname" placeholder="Last Name" type="text" tabindex="2">
                            <span asp-validation-for="BimeGozar.PersonLname" class="text-danger"></span>
                        </div>
                    </div>
                    <label class="control-label col-md-1 " for="PersonLname">:Last Name</label>
                    <div class="col-md-3 indent-small">
                        <div class="form-group internal" style="text-align: left">
                            <input class="form-control" asp-for="BimeGozar.PersonName" id="PersonName" style="direction:ltr" placeholder="Name" type="text" tabindex="1">
                            <span asp-validation-for="BimeGozar.PersonName" class="text-danger"></span>
                        </div>
                    </div>
                    <label class="control-label col-md-1 " for="PersonName">:Name </label>
                </div>

                <div class="col-md-12">
                    <div class="col-md-3">
                        <div class="form-group internal">
                            <div>

                                <input class="form-control" type="text" id="BirthDate" name="BimeGozar.BirthDate"  asp-for="@Model.BimeGozar.BirthDate"  asp-format="{0:yyyy-MM-dd}"  style="width:100%;" /> @*value="@DateTime.Now.ToShortDateString()"*@

                            </div>
                        </div>
                    </div>
                    <label class="control-label col-md-1 " for="BirthDate">:Birth Date </label>


                    <div class="col-md-3">
                        <div class=" internal form-group" style="text-align: left">
                            <input class="form-control" asp-for="BimeGozar.PassportNo" id="PassportNo" placeholder="Passport No" style="direction:ltr" tabindex="4">
                            <span asp-validation-for="BimeGozar.PassportNo" class="text-danger" style="direction:ltr"></span>
                        </div>
                    </div>
                    <label class="control-label col-md-1 " for="PassportNo">:Passport No </label>

                    <div class="col-md-3">
                        <div class="form-group internal">
                            <input class="form-control" asp-for="BimeGozar.FatherName" id="FatherName" placeholder="Father Name" type="text" style="direction:ltr" tabindex="3">

                        </div>
                    </div>
                    <label class="control-label col-md-1 " for="FatherName">:Father Name </label>
                </div>

                <div class="form-group">
                    <div class="  col-md-12 ">


                        <div class="col-md-3">
                            <div class="form-group internal">
                                <input class="form-control" asp-for="BimeGozar.UnIranianCode" id="UnIranianCode" placeholder="UnIranianCode" style="direction:ltr" tabindex="7">
                            </div>
                        </div>
                        <label class="control-label col-md-1 " for="UnIranianCode"> :UnIranianCode </label>

                        <div class="col-md-3">
                            <div class="form-group internal">
                                <input class="form-control" asp-for="BimeGozar.CodePosti" id="CodePosti" placeholder="Zipcode" style="direction:ltr" tabindex="6">
                            </div>
                        </div>
                        <label class="control-label col-md-1 " for="CodePosti"> :Zipcode </label>

                        <div class="col-md-3">
                            <div class="form-group internal" style="text-align: left">
                                <input class="form-control" asp-for="BimeGozar.Mobile" id="Mobile" placeholder="Phone" type="text" style="direction:ltr" tabindex="5">
                                <span asp-validation-for="BimeGozar.Mobile" class="text-danger"></span>
                            </div>
                        </div>
                        <label class="control-label col-md-1 " for="Mobile">:Phone</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="  col-md-12 ">

                            <div class="col-md-11" style="text-align: left">
                                <input class="form-control" asp-for="BimeGozar.PersonAddress" id="PersonAddress" placeholder="Address" type="text" style="direction:ltr" tabindex="8">
                                <span asp-validation-for="BimeGozar.PersonAddress" class="text-danger"></span>
                            </div>

                            <label class="control-label col-md-1 " for="PersonAddress">:Address</label>
                        </div>
                    </div>

                </div>

                <div style="text-align:left">
                    <p>
                        <h4>Policy Information</h4>
                    </p>
                    <hr />
                </div>

                <div class="form-group ">
                    <div class="  col-md-12 ">
                        <div class="col-md-3">
                            <div class="form-group internal">
                                <select class="form-control select2" asp-for="Invoice.CoverLimit" id="CoverLimit" readonly>
                                    @foreach (var item in Model.Invoice.CoverLimitName.Where(a => a.CoverLimitId == 10))
                                    {
                                        <option value="@item.CoverLimitId">@item.CoverLimitName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <label class="control-label col-md-1" for="CoverLimit"> :Cover Limit </label>


                        <div class="col-md-3">
                            <div class="form-group internal input-group">
                                <select class="form-control select2" asp-for="Invoice.SafarKindId" id="SafarKindId" readonly>
                                    @foreach (var item in Model.Invoice.SafarKindName.Where(a => a.SafarKindId == 6))
                                    {
                                        <option value="@item.SafarKindId">@item.SafarKindName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <label class="control-label col-md-1" for="SafarKindId"> :Trip Kind </label>


                        <div class="col-md-3">
                            <div class="form-group internal ">
                                <input class="form-control" id="Moddat" type="number" value="120" readonly> @*asp-for="Invoice.Moddat"*@
                            </div>
                        </div>
                        <label class="control-label col-md-1 " for="Moddat"> :Trip Days </label>
                    </div>
                </div>

                <div class="form-group ">
                    <div class="  col-md-12 ">
                        <div class="col-md-3">
                            <div class="form-group internal">
                                <select class="form-control select2" asp-for="Invoice.CountryOutId" id="CountryOutId1" readonly>
                                    @foreach (var item in Model.Invoice.CountryOutName.Where(a => a.CountryOutId == 9518))
                                    {
                                        <option value="@item.CountryOutId">@item.CountryOutName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <label class="control-label col-md-1" for="CountryOutId1"> :Source Country </label>

                        <div class="col-md-3">
                            <div class="form-group internal">
                                <select class="form-control select2" asp-for="Invoice.CountryId" id="CountryId2" readonly>
                                    @foreach (var item in Model.Invoice.CountryName.Where(a => a.CountryId == 9415))
                                    {
                                        <option value="@item.CountryId">@item.CountryName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <label class="control-label col-md-1 " for="CountryId2"> :Destination Country  </label>



                        <div class="col-md-3">
                            <div class="form-group internal">
                                <input class="form-control" asp-for="Invoice.Gid" type="text"  id="Gid">
                            </div>
                        </div>
                        <label class="control-label col-md-1 " for="Gid"> :Contract No </label>

                    </div>
                </div>

                <div class="form-group ">
                    <div class="  col-md-12 ">

                        <div class="col-md-3">
                            <div class="form-group internal">
                                <input class="form-control" type="text" id="IssueDateMiladi" name="Invoice.IssueDateMiladi"  asp-for="Invoice.IssueDateMiladi" asp-format="{0:yyyy-MM-dd}"  style="width:100%;direction:ltr" /> 
                                @*<input class="form-control" asp-for="Invoice.IssueDateMiladi" id="IssueDateMiladi" placeholder="IssueDate" style="direction:ltr" >*@
                            </div>
                        </div>
                        <label class="control-label col-md-1 " for="IssueDateMiladi"> :Issue Date </label>

                        <div class="col-md-3">
                            <div class="form-group internal">
                                <select class="form-control select2" id="SodurId2" asp-for="Invoice.SodurId" readonly>
                                    @foreach (var item in Model.Invoice.SodurName.Where(a => a.LocationId == 99))
                                    {
                                        var selected = "";
                                        if (item.LocationId == 99)
                                        {
                                            selected = "selected='selected'";
                                        }
                                        <option value="@item.LocationId">@item.LocationName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <label class="control-label col-md-1 " for="SodurId2"> Day Issuance  </label>

                        <div class="col-md-3">
                            <div class="form-group internal">
                                <select class="form-control select2" asp-for="Invoice.AgentId" id="AgentId3" readonly>
                                    @foreach (var item in Model.Invoice.AgentName.Where(a => a.LocationId == 99))
                                    {
                                        var selected = "";
                                        if (item.LocationId == 99)
                                        {
                                            selected = "selected='selected'";
                                        }
                                        <option value="@item.LocationId">@item.LocationName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <label class="control-label col-md-1 " for="AgentId3"> Agent </label>
                    </div>
                </div>

                <div class=" col-md-12">
                    <div class="col-md-8">
                        <div class="form-group internal" style="text-align: left">
                        </div>
                    </div>

                    <div class="col-md-3 indent-small">
                        <div class="form-group internal" style="text-align: left">
                            <input class="form-control" asp-for="Invoice.Amount" id="Amount" placeholder="Amount" style="direction:ltr">

                        </div>
                    </div>
                    <label class="control-label col-md-1 " for="Amount"> :Amount </label>
                </div>


                <div style=" float:left;">
                    <button class="btn-lg btn-warning" type="submit">cancel</button>
                    <button class="btn-lg btn-success" type="submit">Submit</button>
                </div>

            </form>
        </div>

    </div>

</div>




@section Scripts{
    <script>
        $(document).ready(function() {
            $('.select2').select2();
        });

    </script>
    <script>
 function formatDate(date)  {
            const d = new Date(date)
            let month = (d.getMonth() + 1).toString()
            let day = d.getDate().toString()
            const year = d.getFullYear()
            if (month.length < 2) {
                month = '0' + month
            }
            if (day.length < 2) {
                day = '0' + day
            }
            return [year, month, day].join('-')
        }
    </script>


