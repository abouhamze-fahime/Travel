@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@{
    ViewData["Title"] = "فعالسازی";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">صحت سنجی</a></li>
        <li class="breadcrumb-item active" aria-current="page">فعالسازی حساب کاربری </li>
    </ul>
</nav>

<div class="container">
    @if (ViewBag.IsActive)
    {
        <div class="alert alert-success">
            <p>حساب کاربری شما با موفقیت فعال شد</p>
            <p href="/Login">ورود به سایت </p>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <p>حساب کاربری با مشخصات ارسال شده یافت نشد</p>
        </div>
    }


</div>

