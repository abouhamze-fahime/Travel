
@model Travel.Models.Account.Role
@{
    ViewData["Title"] = "حذف نقش";
}




<div class="container alert alert-danger">
    <form method="post" asp-action="DeleteRolePost" asp-controller="Admin">
        <input type="hidden" asp-for="@Model.RoleId" />
        <input type="hidden" asp-for="@Model.RoleTitle" />
        <h2> آیا از حذف نقش "@Model.RoleTitle" مطمئن هستید؟</h2>
        <p>
            <input type="submit" , value="حذف کن" class="btn btn-outline btn-danger" />
            <a asp-page="Index" class="btn btn-outline btn-info">انصراف</a>
        </p>
    </form>

</div>